<Page x:Class="ParcialPdP.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ParcialPdP"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="790"
      Title="Login">

    <Grid Background="#FFBFFFC2">
        <Label Content="Login" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="59" Width="102" FontSize="36"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="304,112,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="304,178,0,0" VerticalAlignment="Top"/>
        <PasswordBox Name="txtPassword" HorizontalAlignment="Left" Margin="395,182,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="txtUsername" HorizontalAlignment="Left" Margin="395,116,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Name="btnLogin" Content="Log in" HorizontalAlignment="Center" Margin="0,246,0,0" VerticalAlignment="Top" Click="btnLogin_Click" Width="102" Height="33" FontSize="18" FontWeight="Bold" FontStyle="Normal" Background="#FFC3C3C3" Foreground="Black"/>

    </Grid>
</Page>
